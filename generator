import time
import os

def clear():
    os.system('cls' if os.name == 'nt' else 'clear')

def loading(text, seconds=3):
    print(text, end='')
    for _ in range(seconds):
        time.sleep(0.5)
        print('.', end='', flush=True)
    print('\n')

clear()
print("ğŸ Welkom bij de Ultimate Generator ğŸ")
