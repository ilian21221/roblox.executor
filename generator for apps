elif keuze == "2":
    print(f"{GREEN}ğŸª™ V-Bucks Generator ğŸª™{RESET}")
    amount = input("Hoeveel V-Bucks wil je genereren? ")
    loading("V-Bucks wordt gegenereerd")
    fake_verification()
    print(f"{RED}âŒ Epic Games denkt dat je probeert te cheaten met {amount} V-Bucks ğŸ˜‚")
    print(f"{YELLOW}âš ï¸ Waarschuwing: Account tijdelijk geblokkeerd wegens verdachte activiteiten!{RESET}")

elif keuze == "3":
    print(f"{GREEN}ğŸ“± Snapchat+ Generator ğŸ“±{RESET}")
    print("1. 3 maanden")
