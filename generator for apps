import time
import os
import sys

# Kleuren voor terminal (werkt op de meeste terminals)
RED = "\033[91m"
GREEN = "\033[92m"
YELLOW = "\033[93m"
CYAN = "\033[96m"
RESET = "\033[0m"

def clear():
    os.system('cls' if os.name == 'nt' else 'clear')

def loading(text, total=20, speed=0.1):
    print(f"{YELLOW}{text}{RESET}")
    for i in range(total + 1):
        percent = int(i / total * 100)
        bar = '#' * i + '-' * (total - i)
        print(f"\r[{bar}] {percent}%", end='', flush=True)
        time.sleep(speed)
    print("\n")

def fake_verification():
    steps = [
        "Verbinding maken met server...",
        "Verificatie token ophalen...",
        "Gebruikersgegevens controleren...",
        "Betalingsgateway verbinden...",
        "Abonnement activeren...",
        "Controle voltooid!"
    ]
    for step in steps:
        print(f"{CYAN}{step}{RESET}")
        time.sleep(1)

clear()
print(f"{GREEN}ğŸ Welkom bij de Ultimate Generator ğŸ{RESET}")
print("Wat wil je genereren?")
print("1. Robux")
print("2. V-Bucks")
